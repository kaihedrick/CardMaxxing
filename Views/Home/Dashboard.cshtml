@{
    ViewData["Title"] = "Dashboard";
    var username = User.Identity.Name; // Retrieves the username from the claims
}

<div class="container mt-5">
    <!-- Hero Section -->
    <div class="jumbotron bg-light text-center py-5 rounded mb-5">
        <h1 class="display-4">Welcome, @username! 😊</h1>
        <p class="lead">This is your personal dashboard. Manage your account, view orders, and explore products seamlessly.</p>
        <hr class="my-4">
        <p>Use the options below to navigate your account.</p>
    </div>

    <!-- Dashboard Options -->
    <div class="row text-center">
        <!-- Order History -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body">
                    <h5 class="card-title">📜 Order History</h5>
                    <p class="card-text">View your past purchases and track your orders.</p>
                    <a asp-controller="User" asp-action="OrderHistory" class="btn btn-primary btn-block mt-3">
                        <i class="fas fa-history"></i> View Orders
                    </a>
                </div>
            </div>
        </div>

        <!-- Back to Home -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body">
                    <h5 class="card-title">🏠 Back to Home</h5>
                    <p class="card-text">Return to the main homepage and continue browsing.</p>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary btn-block mt-3">
                        <i class="fas fa-home"></i> Home
                    </a>
                </div>
            </div>
        </div>

        <!-- Explore Products -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body">
                    <h5 class="card-title">🛒 Explore Products</h5>
                    <p class="card-text">Browse our collection of products and find what you need.</p>
                    <a asp-controller="Product" asp-action="AllProducts" class="btn btn-success btn-block mt-3">
                        <i class="fas fa-shopping-cart"></i> View Products
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
