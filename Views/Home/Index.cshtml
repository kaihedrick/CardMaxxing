@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<div class="container-fluid bg-dark text-white py-5">
    <div class="container text-center">
        <h1 class="display-3 fw-bold">Welcome to <span class="text-warning">CardMaxxing</span> 🚀</h1>
        <p class="lead">Unleash the **ultimate** gaming and rendering power with **top-tier** graphics cards.</p>
        <i class="fas fa-microchip fa-4x text-warning my-3"></i> <!-- GPU Icon -->
        <div class="mt-4">
            <a asp-controller="Shop" asp-action="Index" class="btn btn-warning btn-lg">
                <i class="fas fa-shopping-cart"></i> Browse GPUs
            </a>
            <a asp-controller="Home" asp-action="About" class="btn btn-outline-light btn-lg">
                <i class="fas fa-info-circle"></i> Learn More
            </a>
        </div>
    </div>
</div>

<!-- Featured GPUs Section -->
<div class="container my-5">
    <h2 class="text-center fw-bold">🔥 Featured Graphics Cards</h2>
    <p class="text-center text-muted">Discover the latest and most powerful GPUs on the market.</p>

    <div class="row">
        <!-- GPU Card 1 -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <img src="https://www.pny.com/productimages/7629E07E-13A8-4700-BD42-AF16013FB16B/images/XLR8-RTX-4090-VERTO-EPIC-X-Triple-Fan-gr.png" class="card-img-top gpu-card-img" alt="GPU Image">
                <div class="card-body text-center">
                    <h5 class="card-title">RTX 4090</h5>
                    <p class="card-text">Unrivaled power for gaming & AI rendering.</p>
                    <a asp-controller="Shop" asp-action="Details" asp-route-id="1" class="btn btn-dark">
                        <i class="fas fa-eye"></i> View Details
                    </a>
                </div>
            </div>
        </div>

        <!-- GPU Card 2 -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <img src="https://asset.msi.com/resize/image/global/product/product_167098328944b7e22b5ac4a520efdf017074166476.png62405b38c58fe0f07fcef2367d8a9ba1/600.png" class="card-img-top gpu-card-img" alt="GPU Image">
                <div class="card-body text-center">
                    <h5 class="card-title">RX 7900 XTX</h5>
                    <p class="card-text">High-performance graphics for hardcore gamers.</p>
                    <a asp-controller="Shop" asp-action="Details" asp-route-id="2" class="btn btn-dark">
                        <i class="fas fa-eye"></i> View Details
                    </a>
                </div>
            </div>
        </div>

        <!-- GPU Card 3 -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <img src="https://assets.nvidia.partners/images/png/GV-N407TEAGLE-12GD_US.png" class="card-img-top gpu-card-img" alt="GPU Image">
                <div class="card-body text-center">
                    <h5 class="card-title">RTX 4070 Ti</h5>
                    <p class="card-text">Balance between price and performance.</p>
                    <a asp-controller="Shop" asp-action="Details" asp-route-id="3" class="btn btn-dark">
                        <i class="fas fa-eye"></i> View Details
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- About Section -->
<div class="container-fluid bg-light py-5">
    <div class="container text-center">
        <h2 class="fw-bold">Why Choose <span class="text-warning">CardMaxxing</span>?</h2>
        <p class="text-muted">Your **one-stop shop** for premium GPUs at the best prices.</p>
        <div class="row mt-4">
            <div class="col-md-4">
                <i class="fas fa-truck fa-3x text-light"></i>
                <h5 class="mt-3">🚚 Fast Shipping</h5>
                <p>Get your GPU delivered **quickly** and securely.</p>
            </div>
            <div class="col-md-4">
                <i class="fas fa-star fa-3x text-warning"></i>
                <h5 class="mt-3">⭐ Top Ratings</h5>
                <p>Only the **best** brands and models, tested by experts.</p>
            </div>
            <div class="col-md-4">
                <i class="fas fa-headset fa-3x text-light"></i>
                <h5 class="mt-3">💬 24/7 Support</h5>
                <p>Our team is always here to **help you**.</p>
            </div>
        </div>
    </div>
</div>
