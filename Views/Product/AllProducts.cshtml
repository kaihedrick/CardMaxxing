@model IEnumerable<CardMaxxing.Models.ProductModel>

@{
    ViewData["Title"] = "All Products";
}

<div class="container mt-5">
    <!-- Product Grid -->
    <div class="row justify-content-center">
        @foreach (var product in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-lg rounded-4 p-3 text-center bg-light position-relative">
                    <!-- Clickable Product Area -->
                    <div class="product-details cursor-pointer" onclick="window.location.href='@Url.Action("Details", "Product", new { id = product.ID })'">
                        <h5 class="fw-bold">@product.Name</h5>
                        <p class="text-muted">@product.Description</p>

                        <!-- Product Image -->
                        <img src="@product.ImageUrl" class="img-fluid rounded shadow-sm" alt="@product.Name"
                             style="max-height: 120px; object-fit: contain;">

                        <!-- Product Price -->
                        <p class="mt-2 fw-bold text-light">$@product.Price.ToString("0.00")</p>
                    </div>

                    <!-- Action Icons -->
                    <div class="d-flex justify-content-between align-items-center px-3 mt-3">
                        <!-- Edit (Settings) Icon -->
                        <a href="@Url.Action("Edit", "Product", new { id = product.ID })" class="text-light">
                            <i class="fas fa-cog fa-2x"></i>
                        </a>

                        <!-- Add to Cart Icon -->
                        <a href="@Url.Action("AddToCart", "Cart", new { id = product.ID })" class="text-light">
                            <i class="fas fa-plus-circle fa-2x"></i>
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            document.querySelectorAll(".product-details").forEach(function (item) {
                item.style.cursor = "pointer";
            });
        });
    </script>
}
