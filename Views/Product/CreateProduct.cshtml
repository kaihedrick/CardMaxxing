@model CardMaxxing.Models.ProductModel

@{
    ViewData["Title"] = "Create Product";
}

<div class="container mt-5">
    <!-- Hero Section -->
    <div class="jumbotron bg-dark text-white text-center py-5 rounded shadow">
        <h1 class="display-4"><i class="fas fa-plus-square text-warning"></i> Create a New Product</h1>
        <p class="lead">Add a new graphics card to the store inventory with ease.</p>
        <hr class="my-4 bg-light">
    </div>

    <!-- Product Form Card -->
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <div class="card bg-light shadow-sm border-0">
                <div class="card-body">
                    <h4 class="card-title text-center"><i class="fas fa-box text-primary"></i> Product Details</h4>
                    <hr>
                    <form asp-action="CreateProduct">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <!-- Product Name -->
                        <div class="form-group mb-3">
                            <label asp-for="Name" class="form-label fw-bold"><i class="fas fa-tag text-light"></i> Product Name</label>
                            <input asp-for="Name" class="form-control" placeholder="Enter product name..." />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <!-- Manufacturer -->
                        <div class="form-group mb-3">
                            <label asp-for="Manufacturer" class="form-label fw-bold"><i class="fas fa-industry text-light"></i> Manufacturer</label>
                            <input asp-for="Manufacturer" class="form-control" placeholder="Enter manufacturer name..." />
                            <span asp-validation-for="Manufacturer" class="text-danger"></span>
                        </div>

                        <!-- Description -->
                        <div class="form-group mb-3">
                            <label asp-for="Description" class="form-label fw-bold"><i class="fas fa-align-left text-light"></i> Description</label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter a brief description..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <!-- Price -->
                        <div class="form-group mb-3">
                            <label asp-for="Price" class="form-label fw-bold"><i class="fas fa-dollar-sign text-success"></i> Price</label>
                            <input asp-for="Price" class="form-control" placeholder="Enter product price..." />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <!-- Quantity -->
                        <div class="form-group mb-3">
                            <label asp-for="Quantity" class="form-label fw-bold"><i class="fas fa-cubes text-light"></i> Quantity</label>
                            <input asp-for="Quantity" class="form-control" placeholder="Enter available stock..." />
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>

                        <!-- Image URL -->
                        <div class="form-group mb-3">
                            <label asp-for="ImageUrl" class="form-label fw-bold"><i class="fas fa-image text-light"></i> Image URL</label>
                            <input asp-for="ImageUrl" class="form-control" placeholder="Enter product image URL..." />
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-warning text-dark fw-bold">
                                <i class="fas fa-upload"></i> Create Product
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Back to List Link -->
            <div class="text-center mt-3">
                <a asp-action="Index" class="btn btn-outline-light">
                    <i class="fas fa-arrow-left"></i> Back to Product List
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
